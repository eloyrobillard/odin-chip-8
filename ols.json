{
  "$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
  "collections": [
    { "name": "custom_collection", "path": "c:/path/to/collection" }
  ],
  "enable_document_symbols": true,
  "enable_hover": true,
  "enable_snippets": true,
  "profile": "default",
  "enable_inlay_hints_params": true,
  "enable_inlay_hints_default_params": true,
  "enable_inlay_hints_implicit_return": true,
  "enable_semantic_tokens": false,
  "enable_comp_lit_signature_help": true,
  "profiles": [
    { "name": "default", "checker_path": ["src"] },
    {
      "name": "linux_profile",
      "os": "linux",
      "checker_path": ["src/main.odin"]
    },
    { "name": "windows_profile", "os": "windows", "checker_path": ["src"] }
  ]
}
